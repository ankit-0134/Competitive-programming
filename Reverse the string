#include <iostream>
#include <string>
using namespace std;

int main() {
    string str;
    cout << "Enter a string: ";
    cin >> str;

    // Reversing the string using a for loop
    int start = 0;
    int end = str.length() - 1;
    while (start < end) {
        // Swap characters
        swap(str[start], str[end]);
        start++;
        end--;
    }

    cout << "Reversed string: " << str << endl;

    return 0;
}
